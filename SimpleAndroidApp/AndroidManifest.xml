<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ivan.simple"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".game.GameActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ivan.simple.LevelChooseActivity" />
        </activity>
        
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ivan.simple.StartActivity" />
        </activity>
        
        <activity
            android:name=".StartActivity"
            android:label="@string/title_activity_start"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".LevelChooseActivity"
            android:label="@string/title_activity_choose"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ivan.simple.StartActivity" />
        </activity>
        
        <activity
            android:name=".game.pause.PauseActivity"
            android:label="@string/title_activity_pause"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ivan.simple.game.GameActivity" />
        </activity>
    </application>

</manifest>